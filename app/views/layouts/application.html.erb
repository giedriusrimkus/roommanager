        <% unless logged_in? %>
         <li>
          <%= link_to signup_path do %>
            <span class="glyphicon glyphicon-user"></span>&nbsp;Sign Up
          <% end %>
         </li>
        <% end %>
        <% if logged_in? %>
        <li>
          <%= link_to logout_path, :method => :delete do %>
          <span class="glyphicon glyphicon-log-out"></span>&nbsp;Logout
          <% end %>
        </li>
         <!--  <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">%= gravatar_for current_user, size: 25  %>%= current_user.name %> <span class="caret"></span></a>
