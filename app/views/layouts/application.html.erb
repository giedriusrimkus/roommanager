<!DOCTYPE html>
<html>
<head>
	<title>Room Manager</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
<script>
	$('a[href="' + this.location.pathname + '"]').parents('li,ul').addClass('active');
</script>
</head>
<body>
<nav class="navbar navbar-default col-xs-12 col-sm-12 col-md-10 col-lg-10 col-centered">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "RoomManager", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse main_nav" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <!-- <li> link_to "Contact", root_path %></li> -->
        <% if logged_in? %>
        <li>
          <%= link_to root_path do %>
          <span class="glyphicon glyphicon-dashboard"></span>&nbsp;Dashboard
          <% end %>
        </li>
          <% unless current_user.rooms.any? %>
            <li><%= link_to "Create New Room", new_room_path %></li>
            <li><%= link_to "Join an Existing Room", rooms_path %></li>
          <% end %>
        <% else %>
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span>&nbsp;Home
          <% end %>
        </li>
        <% end %>
