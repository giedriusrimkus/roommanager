<%= form_for @product do |f| %>
	<%= f.text_field :name, class: "form-control", placeholder: "Name * " %><br>
	<%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Descprtion (Optional)" %><br>
	<%= f.text_field :price, class: "form-control", placeholder: "Price" %><br>
	<%= f.submit "Save", class: "btn btn-default" %>
<% end %>