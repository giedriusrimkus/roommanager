<h1>All Products</h1>
<% @products.each do |product| %>
<ul>
<li>
	<p>Product: <%= link_to product.name, product %></p>
	<p>Price: <%= number_to_currency(product.price, :unit => "â‚¬") %></p>
	<% user = product.user %></p>
	<p>By: <%= link_to user.name, user %></p>
	<p>Description: <%= product.description %></p>
	<p>Submitted: <%= product.created_at %></p>
	<p>Updated: <%= product.updated_at %></p>
	<p>
	<%= link_to 'Delete', product_path(product), class: "btn btn-default btn-xs", :method => :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to ' Edit  ', edit_product_path(product), class: "btn btn-default btn-xs" %>
	</p>
</ul>
<% end %>