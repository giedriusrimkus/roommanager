<%= form_for @product do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<p><%= f.text_field :name, class: "form-control", placeholder: "Name" %></p>
	<p><%= f.text_area :description, class: "form-control", rows: "1", placeholder: "Descprtion (Optional)" %></p>
	<p><%= f.number_field :price, in: 0.01..999.99, step: 0.01, class: "form-control price-form", placeholder: "Price, â‚¬ "%></p>
	<p><%= f.submit "Submit", class: "btn btn-default" %></p>
<% end %>